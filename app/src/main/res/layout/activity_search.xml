<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="35dp">

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/sort"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:src="@android:drawable/ic_menu_search" />

            <EditText
                android:id="@+id/et_search"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="40dp"
                android:autofillHints="Home name"
                android:background="@android:drawable/editbox_dropdown_light_frame"
                android:gravity="center"
                android:hint="Search"
                android:inputType="text"
                android:padding="12dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Find Your Comfort Palace"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_marginLeft="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover the best home for you"
            android:layout_marginLeft="35dp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="Recent"
                    android:textSize="16dp"
                    android:backgroundTint="@color/black"
                    android:textColor="@color/white"
                    android:layout_marginLeft="50dp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="130dp"
                    android:layout_height="50dp"
                    android:text="Near You"
                    android:textSize="16dp"
                    android:backgroundTint="#000000"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="15dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="300dp"
                        android:layout_height="400dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_1"
                        android:transitionName="scale big" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sanjida Vila"
                            android:textSize="30dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="contact\n998877"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="200dp" />
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="300dp"
                        android:layout_height="400dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_4" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dream House"
                            android:textSize="30dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="contact\n998892"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="200dp" />
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>


                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="300dp"
                        android:layout_height="400dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_3" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Munira Manjil"
                            android:textSize="30dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="contact\n998899"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="200dp" />
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

                <com.google.android.material.circularreveal.cardview.CircularRevealCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="300dp"
                        android:layout_height="400dp"
                        android:src="@drawable/img_2"
                        android:transitionName="scale big"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Zuarder house"
                            android:textSize="30dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="contact\n998823"
                            android:textSize="20dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:layout_marginTop="45dp"
                            android:layout_marginLeft="200dp" />
                    </RelativeLayout>
                </com.google.android.material.circularreveal.cardview.CircularRevealCardView>

            </LinearLayout>
        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/black"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageButton
                    android:id="@+id/setting_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/settings"
                    android:background="@color/white"
                    android:scaleType="fitCenter"/>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_home_24"
                    android:background="@color/white"
                    android:layout_marginStart="20dp"
                    android:scaleType="fitCenter"
                    />
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/person"
                    android:background="@color/white"
                    android:layout_marginEnd="20dp"
                    android:scaleType="fitCenter"/>
                <ImageButton
                    android:id="@+id/chat_button"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/chat"
                    android:background="@color/white"
                    android:scaleType="fitCenter" />




            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
